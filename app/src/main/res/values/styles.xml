<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/sf_font_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#091227</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SongNameTextStyle">
        <item name="android:fontFamily">@font/sf_font_bold</item>
        <item name="android:textColor">#091127</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SongArtistTextStyle">
        <item name="android:fontFamily">@font/sf_font_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8996B8</item>
    </style>

    <style name="SongTimeTextStyle">
        <item name="android:fontFamily">@font/sf_font_regular</item>
        <item name="android:textColor">#0E172D</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textDirection">1</item>
    </style>
</resources>